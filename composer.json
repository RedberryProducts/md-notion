{
    "name": "redberry/md-notion",
    "description": "Read your notion pages as Markdown in Laravel applications.",
    "keywords": [
        "RedberryProducts",
        "laravel",
        "md-notion"
    ],
    "homepage": "https://github.com/redberryproducts/md-notion",
    "license": "MIT",
    "authors": [
        {
            "name": "Revaz Gh. (Aka MaestroError)",
            "email": "revaz.gh@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^11.0||^12.0",
        "saloonphp/saloon": "^3.14",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "RedberryProducts\\MdNotion\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RedberryProducts\\MdNotion\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RedberryProducts\\MdNotion\\MdNotionServiceProvider"
            ],
            "aliases": {
                "MdNotion": "RedberryProducts\\MdNotion\\Facades\\MdNotion"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}